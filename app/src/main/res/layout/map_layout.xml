<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.binaryfork.onmap.view.map.MediaMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/accent"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Medium.Inverse"/>

    <com.binaryfork.onmap.view.map.ui.RangeSeekBar
        android:id="@+id/rangeSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:layout_alignParentBottom="true"
        android:max="5000"
        android:progress="1000"/>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.binaryfork.onmap.view.search.SearchFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.binaryfork.onmap.view.mediaview.ClusterGridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#9000"
        android:id="@+id/gridView"/>

    <fragment
        android:id="@+id/mediaFragment"
        android:name="com.binaryfork.onmap.view.mediaview.MediaViewFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
