<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/info_layout"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_below="@+id/expanded_image"
            android:layout_marginTop="@dimen/username_bar_size"
            android:gravity="center"
            android:background="@drawable/bottom_line"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/navigate"
                android:drawableTop="@drawable/ic_place_black_48dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_white"
                android:drawablePadding="2dp"
                android:padding="8dp"
                android:text="Show on map"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/googlemaps"
                android:drawableTop="@drawable/googlemaps"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_white"
                android:drawablePadding="2dp"
                android:text="Google Maps"
                android:textColor="#000"/>
        </LinearLayout>

        <TextView
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/buttons"
            android:lineSpacingExtra="3dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:textColor="#000"
            android:textAppearance="@android:style/TextAppearance.Small"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/username_bar_size"
            android:clickable="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/username_bar_size"
            android:paddingRight="8dp"
            android:textAppearance="@android:style/TextAppearance.Medium"/>

        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="@dimen/username_bar_size"
            android:layout_height="@dimen/username_bar_size"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:padding="8dp"/>

        <com.binaryfork.onmap.components.widget.SquareVideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/username"
            android:visibility="gone"/>

        <com.binaryfork.onmap.components.widget.SquareImageView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="#eee"
            android:visibility="invisible"/>
    </RelativeLayout>
</ScrollView>