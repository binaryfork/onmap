<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/search_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/card_view"
        android:background="@drawable/search_bg"
        android:layout_width="match_parent"
        android:paddingTop="16dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/material_menu_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/pb"
            android:layout_marginLeft="56dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Search a location"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/material_menu_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="64dp"
            android:background="@null"
            android:ems="10"
            android:hint="Search a location"
            android:imeOptions="actionSearch"
            android:inputType="textAutoComplete"
            android:singleLine="true"
            android:textColor="#212121"
            android:visibility="gone">

            <requestFocus/>
        </EditText>

        <com.balysv.materialmenu.MaterialMenuView
            android:id="@+id/material_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:mm_color="#616161"
            app:mm_strokeWidth="2"
            app:mm_transformDuration="500"/>

        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/material_menu_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="13dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/clear"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignBottom="@+id/material_menu_button"
            android:layout_alignParentRight="true"
            android:layout_toLeftOf="@+id/pb"
            android:clickable="true"
            android:padding="4dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/results"
        android:background="@drawable/search_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:visibility="gone"/>

</RelativeLayout>