<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/search_root"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/search_bg"
                android:orientation="vertical">

    <ListView
        android:visibility="gone"
        android:id="@+id/results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view">
    </ListView>

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/material_menu_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54dp"
            android:layout_toLeftOf="@+id/mic"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Logo"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#212121"/>

        <EditText
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/material_menu_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="64dp"
            android:background="@null"
            android:ems="10"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="#212121"
            android:visibility="gone">

            <requestFocus/>
        </EditText>

        <com.balysv.materialmenu.MaterialMenuView
            android:id="@+id/material_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:mm_color="#616161"
            app:mm_strokeWidth="2"
            app:mm_transformDuration="500"/>

        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/material_menu_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="13dp"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>